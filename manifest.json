{
  "manifest_version": 3,
  "name": "Troll&Toad Export",
  "description": "Extension for Troll&Toad buyers",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Opciones de exportaci√≥n",
    "default_icon": {
      "16": "src/img/dragonite.jpg",
      "48": "src/img/dragonite.jpg",
      "128": "src/img/dragonite.jpg"
    }
  },
  "icons": {
    "16": "src/img/dragonite.jpg",
    "48": "src/img/dragonite.jpg",
    "128": "src/img/dragonite.jpg"
  },
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.trollandtoad.com/cart"],
      "js": ["scripts/content.js"]
    }
  ]
}
